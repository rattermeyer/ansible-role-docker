Vagrant.configure('2') do |config|
  config.cache.scope = 'machine' if Vagrant.has_plugin?('vagrant-cachier')
  config.vm.box = 'xenial64'
  config.vm.box_url = 'https://vagrantcloud.com/geerlingguy/boxes/ubuntu1604/versions/1.0.6/providers/virtualbox.box'
    
  config.vm.provider 'virtualbox' do |vb|
    vb.cpus = 2
    vb.memory = 512
    vb.linked_clone = true if Vagrant::VERSION =~ /^1.8/
  end

    

    

    

  config.vm.define 'ansible-role-docker' do |c|
    c.vm.hostname = 'ansible-role-docker'
    
  end
  
end